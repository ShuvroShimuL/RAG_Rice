# RAG_Rice Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ==================== API Keys ====================
# Groq API Key (Required)
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenAI API Key (if using OpenAI embeddings)
# OPENAI_API_KEY=your_openai_api_key_here

# ==================== Model Configuration ====================
# LLM Model Name
LLM_MODEL=llama-3.1-8b-instant

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ==================== Database Configuration ====================
# Vector Database Collection Name
VECTOR_DB_COLLECTION=rice_advisory

# Vector Database Persistence Directory
VECTOR_DB_PERSIST_DIR=./data/vector_store

# ==================== Application Settings ====================
# Environment: development, production, testing
APP_ENV=development

# Debug Mode: true or false
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=5000

# ==================== Logging ====================
# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=./logs/app.log

# ==================== ML Model Settings ====================
# Model Save/Load Paths
YIELD_MODEL_PATH=./models/rice_yield_model.pkl
REGION_ENCODER_PATH=./models/region_encoder.pkl
RICE_TYPES_PATH=./models/rice_types.pkl

# ==================== Data Paths ====================
# PDF Documents Directory
PDFS_DIR=./data/pdfs

# Processed Data Directory
PROCESSED_DIR=./data/processed

# ML Dataset Path
ML_DATASET=./data/merged_dataset_final.csv

# ==================== RAG Settings ====================
# Document Chunk Size
CHUNK_SIZE=1000

# Document Chunk Overlap
CHUNK_OVERLAP=200

# Number of documents to retrieve
TOP_K_DOCUMENTS=5

# ==================== LLM Generation Settings ====================
# Temperature (0.0 - 1.0)
# Lower = more focused, Higher = more creative
TEMPERATURE=0.3

# Max Tokens
MAX_TOKENS=1000

# ==================== Optional: External Services ====================
# Weather API (if integrating weather data)
# WEATHER_API_KEY=your_weather_api_key

# Monitoring/Analytics
# SENTRY_DSN=your_sentry_dsn
# ANALYTICS_KEY=your_analytics_key

# ==================== Security ====================
# Secret Key for Session Management (if using Flask sessions)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your_secret_key_here

# ==================== Database (if using SQL database) ====================
# DATABASE_URL=postgresql://user:password@localhost/dbname
# or
# DATABASE_URL=sqlite:///./data/app.db
